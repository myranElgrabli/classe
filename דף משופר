    <script>
        function validateCreditCard() {
            const cardNumberInput = document.querySelector('#card-fields input:nth-of-type(1)');
            const expirationInput = document.querySelector('#card-fields input:nth-of-type(2)');
            const cvvInput = document.querySelector('#card-fields input:nth-of-type(3)');

            const validCardNumber = "1234567890123456";
            const validExpiration = "12/29";
            const validCVV = "123";

            if (cardNumberInput.value === validCardNumber &&
                expirationInput.value === validExpiration &&
                cvvInput.value === validCVV) {
                alert('תשלום אושר!'); // כאן יכול להיות לוגיקת עבודה נוספת
            } else {
                alert('פרטי הכרטיס אינם נכונים, אנא בדוק שנית.');
            }
        }
        
        const creditCardOption = document.getElementById('credit-card-option');
        const paypalOption = document.getElementById('paypal-option');
        const cardFields = document.getElementById('card-fields');

        creditCardOption.addEventListener('click', () => {
            paypalOption.classList.toggle('hidden');
            cardFields.classList.toggle('hidden');
        });

        paypalOption.addEventListener('click', () => {
            creditCardOption.classList.toggle('hidden');
            cardFields.classList.toggle('hidden');
        });
    </script>
