    <script>
        function selectItem(element) {
            // מסיר את המחלקה "selected" מכל הכפתורים
            const buttons = document.querySelectorAll('.image-container button');
            buttons.forEach(button => button.classList.remove('selected'));

            // מוסיף את המחלקה "selected" לכפתור שנבחר
            element.classList.add('selected');
        }

        function openModal() {
            document.getElementById('myModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('myModal').style.display = 'none';
        }

        window.onclick = function(event) {
            const modal = document.getElementById('myModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
        
        function openMySite() {
            const mySiteBox = document.getElementById('mySiteBox');
            mySiteBox.style.display = 'block';
        }

        function closeMySite() {
            document.getElementById('mySiteBox').style.display = 'none';
        }
    </script>
